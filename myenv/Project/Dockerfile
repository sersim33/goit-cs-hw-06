FROM python:3.11-slim

# Встановлюємо змінну середовища для домашньої директорії додатку
ENV APP_HOME=/app

# Встановлюємо робочу директорію в контейнері
WORKDIR $APP_HOME

# Копіюємо файли з локальної директорії в контейнер
COPY . .

# Встановлюємо залежності з requirements.txt
RUN pip install -r requirements.txt

# Відкриваємо порт 3000 для зовнішнього доступу
EXPOSE 3000

# Команда для запуску сервера. Змініть її відповідно до вашої потреби.
CMD ["python", "./app/main.py"]




